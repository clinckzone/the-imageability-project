@import "default"

ul
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 36px;
  li
    list-style: none;
    border-radius: 4px;
    border: 1.5px solid #e8e8e8;
    transition: all 0.1s;
    box-shadow: 5px 3px 8px 5px rgba(0,0,0,0.05);
    padding-bottom: 14px;
    margin-right: 48px;
    a
      display: flex;
      flex-direction: column;
      font-size: 20px;
      text-decoration: none;
      align-items: center;
      color: #484848;
      img
        width: 200px;
        height: 200px;
        margin-bottom: 14px;
        border-radius: 4px 4px 0px 0px;
      span 
        min-width: 250px;
        margin: auto;
        text-align: center;
  li:hover
    transform: scale(1.02);
    box-shadow: 0px 3px 8px 5px rgba(0,0,0,0.07);
    a
      font-weight: 800;